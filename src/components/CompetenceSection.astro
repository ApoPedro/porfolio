import Card from './Card.astro';

const competences = [
  {
    title: 'Réaliser un développement d’application',
    projects: [
      { name: 'Logiciel d\'aide à la prise de décision concernant le meilleur itinéraire à prendre pour des personnels de la santé', tag: 'SAE S2' },
      { name: 'Application mobile de génération de recette', tag: 'Cours mobile' },
      { name: 'Application d\'API d\'annuaire', tag: 'SAE S1' },
      { name: 'Application de gestion de liste de course en ligne', tag: 'Cours Symfony' },
      { name: 'Système de brouillon et ergonomie sur NextSign', tag: 'Alternance Logipro' },
      { name: 'Adaptation d’un module de paiement Stripe sur Captain Learning', tag: 'Alternance Logipro' },
    ],
    level: 'Très bon',
    feedback: 'Grâce à mes projets de BUT et à mon alternance, j\'ai acquis une solide maîtrise du développement d\'applications (PHP, Vue.js, Symfony, intégration d’API externes).'
  },
  {
    title: 'Optimiser des applications informatiques',
    projects: [
      { name: 'Logiciel d\'aide à la prise de décision concernant le meilleur itinéraire à prendre pour des personnels de la santé', tag: 'SAE S2' },
      { name: 'Application d\'API d\'annuaire', tag: 'SAE S1' },
      { name: 'Amélioration ergonomique et UX/UI de NextSign', tag: 'Alternance Logipro' },
      { name: 'Optimisation de la gestion des parcours dans Tree Learning', tag: 'Alternance Logipro' },
    ],
    level: 'Très bon',
    feedback: 'J\'ai renforcé mes compétences en optimisation, notamment via l’ergonomie (UX/UI avec Figma) et la simplification des parcours utilisateurs dans mes projets d’alternance.'
  },
  {
    title: 'Administrer des systèmes informatiques communicants complexes',
    projects: [
      { name: 'Application de gestion de liste de course en ligne', tag: 'Cours Symfony' },
      { name: 'Site de covoiturage pour animaux', tag: 'SAE S3-S4' },
      { name: 'Gestion des flux asynchrones avec webhooks Stripe', tag: 'Alternance Logipro' },
      { name: 'Configuration d\'environnements (local/dev/prod) sur Captain Learning', tag: 'Alternance Logipro' },
    ],
    level: 'Bon',
    feedback: 'J\'ai progressé dans l’administration de systèmes communicants via Stripe (webhooks) et la gestion des environnements en alternance.'
  },
  {
    title: 'Gérer des données de l’information',
    projects: [
      { name: 'Site de covoiturage pour animaux', tag: 'SAE S3-S4' },
      { name: 'Application mobile de génération de recette', tag: 'Cours mobile' },
      { name: 'Application de gestion de liste de course en ligne', tag: 'Cours Symfony' },
      { name: 'Gestion des parcours/sessions dans Tree Learning', tag: 'Alternance Logipro' },
      { name: 'Transactions et statuts de signature dans NextSign', tag: 'Alternance Logipro' },
    ],
    level: 'Bonne maîtrise',
    feedback: 'J\'ai consolidé mes compétences en gestion de données grâce à Doctrine et aux projets Tree Learning et NextSign en alternance.'
  },
  {
    title: 'Conduire un projet',
    projects: [
      { name: 'Application d\'aide à la prise de décision concernant le meilleur itinéraire à prendre pour des personnels de la santé', tag: 'SAE S2' },
      { name: 'Site de covoiturage pour animaux', tag: 'SAE S3-S4' },
      { name: 'Editeur de publications sur les réseaux sociaux', tag: 'Mission de stage' },
      { name: 'Gestion Agile avec Jira et mêlées quotidiennes', tag: 'Alternance Logipro' },
    ],
    level: 'Bonne maîtrise',
    feedback: 'J\'ai confirmé mes compétences en gestion de projet avec les méthodes Agiles (Scrum, Kanban) utilisées chez Logipro.'
  },
  {
    title: 'Travailler dans une équipe informatique',
    projects: [
      { name: 'Editeur de poste sur les réseaux sociaux', tag: 'Mission de stage' },
      { name: 'Site web de covoiturage', tag: 'SAE S3-S4' },
      { name: 'Stage de 12 semaines', tag: 'Stage' },
      { name: 'Travail collaboratif avec devs & UX sur NextSign', tag: 'Alternance Logipro' },
      { name: 'Communication inter-équipes sur Captain Learning', tag: 'Alternance Logipro' },
    ],
    level: 'Très bon',
    feedback: 'Grâce à mon alternance, j\'ai travaillé en Agile avec plusieurs équipes (développeurs, UX/UI, chefs de projet), renforçant ma collaboration et ma communication.'
  }
];
---

<section>
  <h2 class="section-title">Portefeuille de Compétences</h2>
  <p>Vous pourrez trouver ci-dessous mon portefeuille de compétences reprenant le référentiel académique de l'IUT, enrichi par mon expérience en alternance.</p>
  <div class="card-container">
    {competences.map((competence) => (
      <Card title={competence.title} projects={competence.projects} level={competence.level} feedback={competence.feedback} />
    ))}
  </div>
</section>

<style>
  .section-title {
    font-size: var(--text-xl);
    color: var(--gray-0);
  }

  .card-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media (min-width: 50em) {
    .card-container {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (min-width: 75em) {
    .card-container {
      grid-template-columns: 1fr 1fr 1fr;
    }
  }

  p {
    font-size: 1.3rem;
    color: #37474f;
    margin-bottom: 1rem;
  }
</style>
